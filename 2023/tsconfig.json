{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "module": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2020"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
